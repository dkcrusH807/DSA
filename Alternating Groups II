    def numberOfAlternatingGroups(self, colors, k):
        n=len(colors)
        if k>n:
            return 0
        ans=0
        alt=1
        for i in range(1,n+k-1):
            curr=colors[i%n]
            prev=colors[(i-1)%n]
            if curr!=prev:
                alt+=1
            else:
                alt=1
            if alt>=k:
                s=i-k+1
                if s<n:
                    ans+=1
        return ans
